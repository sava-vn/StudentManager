<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/colorWhite"></solid>
            <padding android:bottom="5dp" android:left="16dp" android:top="5dp"></padding>
            <corners android:radius="5dp"></corners>
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <solid android:color="@color/colorBlue"></solid>
            <padding android:bottom="5dp"  android:top="5dp"></padding>
            <corners android:radius="5dp"></corners>
        </shape>
    </item>
</selector>